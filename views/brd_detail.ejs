<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- data.brdtitle %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include("common/header.ejs") %>
    <div id="container">
        <%- include("common/banner.ejs") %>
        <div class="brd_detail">
            <div class="center">
                <div class="top">
                    <h2>기업소식</h2>
                </div>
                <div class="bot top_info">
                    <div class="number"><%- data.brdid %></div>
                    <div class="title"><%- data.brdtitle %></div>
                    <div class="auther"><%- data.brdauther %></div>
                </div>
                <div class="context"><%- data.brdcontext %></div>
                <div class="under_info">
                    <div class="view">조회수<%- data.brdviews %></div>
                    <div class="date">작성일<%- data.brddate %></div>
                </div>
                <div class="btns">
                    <a class="edit_btn" href="/uptview/<%- data.brdid %>">수정</a>
                    <a id="del" class="delete_btn" href="/delete/<%- data.brdid %>">삭제</a>
                    <a class="list_btn" href="/list">목록</a>
                </div>
            </div>
        </div>
    </div>
    <%- include("common/footer.ejs") %>

    <script>
        const delbtn = document.querySelector("#del");

        delbtn.addEventListener("click",function(event){
            // 확인, 취소 고를 수 있는 경고창 꺼내기
            let test = window.confirm("정말 삭제하시겠습니까?");
            // 확인을 누르면 true / 취소를 누르면 false
            if(test === false) {
                // 취소 누르면 페이지 이동 금지
                event.preventDefault();
            }
        });
    </script>
</body>
</html>